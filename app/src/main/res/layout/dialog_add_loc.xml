
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:layout_margin="5dp"
        android:layout_gravity="center">



        <ImageView
            android:id="@+id/addlocimage_d"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/gallery"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ssidadd_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24dp"
            android:text="SSID"

            android:hint="ssid"
            android:textColor="#fdd000"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/wifi_signal_tower"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pwadd_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:shadowColor="#fdd000"
                android:gravity="center"
                android:ems="10"
                android:layout_centerInParent="true"
                android:hint="PASSWORD"
                android:textColorHint="#fdd000"
                android:layout_gravity="center"
                android:inputType="textPersonName"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/key"/>

        </RelativeLayout>>

        <Button
            android:id="@+id/ajouter_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add access point"
            android:background="#000000"
            android:textColor="#fdd000"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

</LinearLayout>

