<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popupid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_info_bubble"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:paddingBottom="25dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="5dip"
    android:gravity="center">

    <ImageView
        android:id="@+id/clientPic"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dip"
        android:src="@drawable/ic_power_settings_new_black_24dp" />

    <LinearLayout
        android:id="@+id/layoutpopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dip"
        android:orientation="vertical">


        <TextView
            android:id="@+id/titleWifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:text="Amixx XX Soluxxxxx"
            android:textColor="#000000"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/passworWifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:text="+91-98XXXXX200"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/toconnect"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFC300"
            android:background="@drawable/com_facebook_tooltip_black_background"
            android:text="Connect" />

        <ImageView
            android:id="@+id/addfavourite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:clickable="true"
            android:contextClickable="true"
            app:srcCompat="@drawable/heart" />

    </LinearLayout>
</LinearLayout>